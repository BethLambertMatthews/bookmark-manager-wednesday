source 'https://rubygems.org'

ruby '3.0.2'

gem 'sinatra'
# sinatra web app structure
gem 'sinatra-contrib'
# contrib includes the sinatra reloader
gem 'webrick'
# server, used when call rackup?

# DATABASE GEMS
gem 'pg'
# ruby gem, to use postgres
# postgresql needs to be installed on local machine first, using brew

# TESTING GEMS - could be placed in group :test do end
gem 'rspec'
gem 'simplecov', require: false
gem 'simplecov-console', require: false
# require: false - only required when asked for inside spec_helper?
gem 'rubocop'
#  linter, needs .rubocop.yml file

gem 'selenium-webdriver'
# chrome driver for selenium
gem 'capybara'
# automated browser for feature testing
gem 'launchy'
# offers save and display page within capybara
